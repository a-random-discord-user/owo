<%- include('../../partials/header.ejs') %>
<section class="hero is-medium is-info">
  <div class="hero-body">
    <div class="container">
        <h1 class="title">
        Bot Verification 
        </h1>
        <h2 class="subtitle">
          Apply for you Discord bot to be verified.
      </h2>
    </div>
  </div>
</section>
<div class="margin-top-20 container">
    <form method="POST"> 
      <h3 class="title is-4"><a href="/docs/verification">Make sure your bot meets the requirements.</a></h3>
        <div class="field">
                <label class="label">Select your bot</label>
                <div class="control">
                    <select class="input verification-select" name="bot" required>
                            <option value="" disabled selected>Select</option>
                            <%- bots.map(bot =>`<option value="${bot.id}">${bot.name}</option>`)%>
                    </select>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <label class="label">Does your bot post server count to our API?</label>
              <label class="radio">
                <input type="radio" name="server_count" value="Yes" required>
                Yes
              </label>
              <label class="radio">
                <input type="radio" name="server_count" value="No" required>
                No
              </label>
            </div>
          </div>
          <div class="field">
              <div class="control">
                  <label class="label">Is your bot online 24/7 other than short maintenance?</label>
                <label class="radio">
                  <input type="radio" name="online" value="Yes" required>
                  Yes
                </label>
                <label class="radio">
                  <input type="radio" name="online" value="No" required>
                  No
                </label>
              </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="label">Is your bot original code and not a fork of another bot?</label>
                  <label class="radio">
                    <input type="radio" name="original_code" value="Yes" required>
                    Yes
                  </label>
                  <label class="radio">
                    <input type="radio" name="original_code" value="No" required>
                    No
                  </label>
                </div>
              </div>  
 <div class="field">
  <label class="label">What is your bot's main feature?</label>
  <div class="control">
    <input class="input-dark" type="text" name="features" placeholder="Example: Does your math homework." required>
  </div>
</div>  
<div class="field">
    <label class="label">Website or Github where the widget is located.</label>
    <div class="control">
      <input class="input-dark" type="url" name="website" placeholder="You can only include one of them. Choose the one that has most traffic." required>
    </div>
  </div>                               
            <div class="field is-grouped">
            <div class="control">
                <button class="button is-link">Submit</button>
            </div>
            </div>
    </form>
</div>
<%- include('../../partials/footer.ejs') %>
